<%# "Adding a new entry" view when user wants to sell a plant.  %>
<h3>
    <center>Editing Details<center>
</h3>

<p><%= @plant.name %></p>
<p><%= @plant.age %></p>

<% if @plant.image.attached?%>
<%= image_tag url_for(@plant.image), class: "plant" %>
<%end%>


<%if current_user.id == @plant.user_id %>

<ul>
    <li><%= link_to "Edit", edit_plant_path(@plant) %></li>
    <li><%= link_to "Destroy", plant_path(@plant),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
<%else%>

<%end%>
<%= link_to "Back", plants_path %>